<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.usercenter.dao.UserDao">
    <resultMap type="com.example.usercenter.model.User" id="userMap">
        <id column="user_id" property="userId"/>
        <result column="account" property="account"/>
        <result column="password" property="password"/>
        <result column="user_type" property="userType"/>
        <result column="state" property="state"/>
        <result column="phone_num" property="phoneNum"/>
        <result column="user_name" property="userName"/>
        <result column="sex" property="sex"/>
        <result column="register_time" property="registerTime"/>
        <collection property="authorityList" column="user_id" ofType="com.example.usercenter.model.Authority" javaType="java.util.HashSet">
            <id column="authority_id" property="authorityId"/>
            <result column="authority_name" property="authorityName"/>
            <result column="authority_code" property="authorityCode"/>
            <result column="create_time" property="createTime"/>
        </collection>
    </resultMap>

    <sql id="conditions">
        <if test="account != null">
            and u.account=#{account}
        </if>
        <if test="password != null">
            and u.password=#{password}
        </if>
        <if test="userName != null">
            and u.user_name=#{userName}
        </if>
        <if test="sex != null">
            and u.sex=#{sex}
        </if>
        <if test="phoneNum != null">
            and u.phone_num=#{phoneNum}
        </if>
        <if test="userType != null">
            and u.user_type=#{userType}
        </if>
        <if test="state != null">
            and u.state=#{state}
        </if>
    </sql>

    <select id="findByPage" parameterType="com.example.usercenter.model.QUser" resultMap="userMap">
        select u.*,a.* from user u
        left join user_authority au on u.user_id=au.user_id
        left join authority a on au.authority_id=a.authority_id
        <where>
            <include refid="conditions"/>
        </where>
        <if test="sort != null">
            order by ${sort} ${order}
        </if>
        limit #{offset},#{rows}
    </select>

    <select id="count" parameterType="com.example.usercenter.model.QUser" resultType="long">
        select count(1) from user u
        <where>
            <include refid="conditions"/>
        </where>
    </select>

    <select id="query" parameterType="com.example.usercenter.model.QUser" resultMap="userMap">
        select u.*,a.* from user u
        left join user_authority au on u.user_id=au.user_id
        left join authority a on au.authority_id=a.authority_id
        <where>
            <include refid="conditions"/>
        </where>
        <if test="sort != null">
            order by ${sort} ${order}
        </if>
    </select>
</mapper>